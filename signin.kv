<ChatbotScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        # Wrapping the entire layout to use 80% of the screen width and center it
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8, 1  # 80% width, 100% height
            pos_hint: {'center_x': 0.5}  # Center the layout

            # Title label
            Label:
                text: "Chatbot"
                font_size: '24sp'
                bold: True
                size_hint_y: None
                height: 40

            # ScrollView for chat messages
            ScrollView:
                BoxLayout:
                    id: chat_area
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 5
                    padding: [5, 5]

            # Input field and buttons
            BoxLayout:
                size_hint_y: None
                height: 50
                spacing: 5

                Button:
                    text: "Back"
