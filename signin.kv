# SignIn Screen
<SignInScreen>:
  
    FloatLayout:
        # Background image filling the screen
        Image:
            source: "C:/pet_care_app/back.jpeg"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {"x": 0, "y": 0}

        # Title Label in the center of the screen
        Label:
            text: "Pet Care Assistant"
            font_size: 60
            color: 1, 1, 1, 1
            halign: "center"
            size_hint: None, None
            size: 300, 100
            pos_hint: {"center_x": 0.5, "center_y": 0.7}

        # BoxLayout for horizontally aligning Login and Sign Up buttons
        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: 450, 50  # Total width for both buttons
            pos_hint: {"center_x": 0.5, "center_y": 0.9}

            # Login Button
            Button:
                text: "Login"
                size_hint: None, None
                size: 200, 50
                background_color: 0, 0, 0, 0
                on_press: root.switch_to_login(self)

            # Sign Up Button
            Button:
                text: "Sign Up"
                size_hint: None, None
                size: 200, 50
                background_color: 0.2, 0.5, 0.8, 1
                on_press: root.switch_to_sign_up(self)


# Login Screen
<LoginScreen>:
    FloatLayout:
        # Background image filling the screen
        Image:
            source: "C:/pet_care_app/back.jpeg"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {"x": 0, "y": 0}

        # Login Label at the top
        Label:
            text: "Login"
            font_size: 30
            color: 1, 1, 1, 1
            halign: "center"
            size_hint: None, None
            size: 300, 100
            pos_hint: {"center_x": 0.5, "center_y": 0.9}

        # Username input field
        TextInput:
            id: username_input  # Adding an ID for later use in Python file
            hint_text: "Username"
            size_hint: None, None
            size: 250, 40
            pos_hint: {"center_x": 0.5, "center_y": 0.75}
            multiline: False

        # Password input field
        TextInput:
            id: password_input  # Adding an ID for later use in Python file
            hint_text: "Password"
            password: True
            size_hint: None, None
            size: 250, 40
            pos_hint: {"center_x": 0.5, "center_y": 0.65}
            multiline: False

        # Login button
        Button:
            text: "Login"
            size_hint: None, None
            size: 200, 50
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            background_color: 0.2, 0.5, 0.8, 1
            on_press: root.login(self)

        # Back button
        Button:
            text: "Back"
            size_hint: None, None
            size: 200, 50
            pos_hint: {"center_x": 0.5, "center_y": 0.35}
            background_color: 0.6, 0.2, 1, 1
            on_press: root.switch_back(self)


