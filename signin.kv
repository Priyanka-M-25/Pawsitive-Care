<PetInfoScreen>:
    breed_input: breed_input
    animal_type_layout: animal_type_layout
    age_input: age_input
    gender_input: gender_input
    weight_input: weight_input
    longevity_label: longevity_label  # Add label id for longevity
    grooming_label: grooming_label    # Add label id for grooming frequency
    lifetime_cost_label: lifetime_cost_label  # Add label id for lifetime cost
    food_cost_label: food_cost_label  # Add label id for food cost
    

    # Layout for the screen
    FloatLayout:

        # Background image
        Image:
            source: "C:/pet_care_app/pet.jpeg"
            allow_stretch: True
            keep_ratio: False

        # Title label
        Label:
            text: "Pet Info"
            color: 1, 1, 1, 1
            font_size: 60
            bold: True
            size_hint: None, None
            size: root.width * 0.8, 50
            pos_hint: {"center_x": 0.5, "top": 0.95}

        # Labels for prediction results section (placed below the title)
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: root.width * 0.8, 200
            pos_hint: {"center_x": 0.5, "top": 0.8}

            Label:
                id: longevity_label
                text: "Predicted Longevity: N/A"
                color: 1, 1, 1, 1
                font_size: 32
                bold: True

            Label:
                id: grooming_label
                text: "Predicted Grooming Frequency: N/A"
                color: 1, 1, 1, 1
                font_size: 32
                bold: True

            Label:
                id: lifetime_cost_label
                text: "Predicted Lifetime Cost: N/A"
                color: 1, 1, 1, 1
                font_size: 32
                bold: True

            Label:
                id: food_cost_label
                text: "Predicted Food Cost: N/A"
                color: 1, 1, 1, 1
                font_size: 32
                bold: True
            
            

            Label:
                id: common_foods_label
                text: "Common foods"
                color: 1, 1, 1, 1  # Set text color to black
                font_size: '32'
                bold: True

        # Form layout for pet details
        BoxLayout:
            orientation: "vertical"
            size_hint: None, None
            size: root.width * 0.8, root.height * 0.6
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            # Animal Type field with Toggle buttons for Dog and Cat
            BoxLayout:
                id: animal_type_layout
                orientation: "horizontal"
                size_hint: None, None
                size: root.width * 0.8, 50
                padding: [0, 40, 0, 20]

                Label:
                    text: "Animal Type (Dog/Cat):"
                    color: 1, 1, 1, 1
                    font_size: 32
                    bold: True

                ToggleButton:
                    id: dog_button
                    text: "Dog"
                    size_hint: None, None
                    size: 100, 40
                    group: "animal_type"
                    state: "down"
                    on_press: root.animal_type = "Dog"

                ToggleButton:
                    id: cat_button
                    text: "Cat"
                    size_hint: None, None
                    size: 100, 40
                    group: "animal_type"
                    on_press: root.animal_type = "Cat"

            # Gender input field
            BoxLayout:
                orientation: "horizontal"
                size_hint: None, None
                size: root.width * 0.8, 50
                padding: [0, 40, 0, 20]

                Label:
                    text: "Gender (Male/Female):"
                    color: 1, 1, 1, 1
                    font_size: 32
                    bold: True

                TextInput:
                    id: gender_input
                    hint_text: "Enter Male or Female"
                    size_hint: None, None
                    size: 200, 40

            # Breed input field
            BoxLayout:
                orientation: "horizontal"
                size_hint: None, None
                size: root.width * 0.8, 50
                padding: [0, 40, 0, 20]

                Label:
                    text: "Breed:"
                    color: 1, 1, 1, 1
                    font_size: 32
                    bold: True

                TextInput:
                    id: breed_input
                    hint_text: "Enter Breed"
                    size_hint: None, None
                    size: 200, 40

            # Age input field
            BoxLayout:
                orientation: "horizontal"
                size_hint: None, None
                size: root.width * 0.8, 50
                padding: [0, 40, 0, 20]

                Label:
                    text: "Age:"
                    color: 1, 1, 1, 1
                    font_size: 32
                    bold: True

                TextInput:
                    id: age_input
                    hint_text: "Enter Age"
                    size_hint: None, None
                    size: 200, 40

            # Weight input field
            BoxLayout:
                orientation: "horizontal"
                size_hint: None, None
                size: root.width * 0.8, 50
                padding: [0, 40, 0, 20]

                Label:
                    text: "Weight (kg):"
                    color: 1, 1, 1, 1
                    font_size: 32
                    bold: True

                TextInput:
                    id: weight_input
                    hint_text: "Enter Weight in kg"
                    size_hint: None, None
                    size: 200, 40

        # Submit and Back buttons section (centered)
        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: root.width * 0.8, 100
            pos_hint: {"right": 1, "top": 0.15}

            # Submit button
            Button:
                text: "Submit"
                size_hint: None, None
                size: 200, 50
                background_color: 0.2, 0.6, 1, 1
                on_press: root.submit_form()

            # Back button
            Button:
                text: "Back"
                size_hint: None, None
                size: 100, 50
                background_color: 0.8, 0.2, 0.2, 1
                on_press: root.go_back() 


            Button:
                text: "Dieases Prediction"
                size_hint: None, None
                size: 300, 50
                background_color: 0.5, 0.8, 0.2, 1
                on_press: root.go_to_diseases() 

            





